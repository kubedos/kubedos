[ req ]
default_bits       = 2048
prompt             = no
default_md         = sha256
req_extensions     = v3_req
distinguished_name = dn

[ dn ]
CN = {{ etcd_pki_fqdn }}

[ v3_req ]
basicConstraints = CA:FALSE
keyUsage = digitalSignature, keyEncipherment

{% if etcd_pki_purpose == "server" %}
extendedKeyUsage = serverAuth, clientAuth
{% else %}
extendedKeyUsage = serverAuth, clientAuth
{% endif %}

subjectAltName = @alt_names

[ alt_names ]
DNS.1 = {{ etcd_pki_fqdn }}
DNS.2 = {{ etcd_pki_short }}
DNS.3 = localhost
IP.1  = {{ etcd_pki_ip1 }}
IP.2  = {{ etcd_pki_ip2 }}
IP.3  = 127.0.0.1

