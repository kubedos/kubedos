[ req ]
default_bits       = 2048
prompt             = no
default_md         = sha256
distinguished_name = dn
req_extensions     = v3_req

[ dn ]
CN = {{ client_cn }}
{% if client_o is defined and client_o|length > 0 -%}
O = {{ client_o }}
{%- endif %}

[ v3_req ]
keyUsage = critical, digitalSignature, keyEncipherment
extendedKeyUsage = clientAuth

